<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"

    android:layout_height="match_parent">
   <android.support.v7.widget.CardView
       app:cardCornerRadius="10dp"
       android:layout_gravity="center"
       app:cardBackgroundColor="@color/colorBG_down"
       android:layout_marginHorizontal="20dp"
       android:padding="5dp"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content">
       <LinearLayout
           android:layout_width="wrap_content"
           android:orientation="vertical"
           android:layout_height="wrap_content">
       <TextView
           android:textColor="@color/colorAccent"
           android:text="We have sent you an email with security code. Please check your email inbox or spam folder."
           android:layout_marginHorizontal="5dp"
           android:layout_marginVertical="10dp"
           android:fontFamily="@font/azonix"
           android:gravity="center"
           android:layout_width="match_parent"
           android:layout_height="wrap_content" />
           <Button
               android:id="@+id/btn_security_reset_ok"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_margin="10dp"
               android:background="@color/colorBG_up"
               android:text="Ok"
               android:fontFamily="@font/azonix"
               android:textAllCaps="false"
               android:textColor="#ffffffff" />

       </LinearLayout>
   </android.support.v7.widget.CardView>

</LinearLayout>
