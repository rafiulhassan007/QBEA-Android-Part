<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".FragmentSettingChangePassword">

    <android.support.v7.widget.CardView
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="@color/colorBG_down"
        android:layout_marginHorizontal="15dp"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ScrollView
            android:layout_width="match_parent"
            android:fillViewport="true"
            android:layout_marginHorizontal="5dp"
            android:layout_marginVertical="10dp"
            android:layout_height="match_parent">
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:layout_marginTop="5dp"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="@color/colorAccent"
                android:textColorHint="@color/colorAccent">
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/textInput_setting_change_pass_old_pass"
                    android:layout_width="match_parent"
                    android:inputType="textPassword"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorWhite"
                    android:hint="Current Password" />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:layout_marginTop="5dp"
                app:passwordToggleTint="@color/colorAccent"
                android:textColorHint="@color/colorAccent"
                app:passwordToggleEnabled="true">
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/textInput_setting_change_pass_new_pass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="New Password"
                    android:textColor="@color/colorWhite"
                    android:inputType="textPassword" />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:layout_marginTop="5dp"
                app:passwordToggleTint="@color/colorAccent"
                android:textColorHint="@color/colorAccent"
                app:passwordToggleEnabled="true">
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/textInput_setting_change_pass_re_pass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Retype New Password"
                    android:textColor="@color/colorWhite"
                    android:inputType="textPassword" />
            </android.support.design.widget.TextInputLayout>
            <Button
                android:id="@+id/btn_setting_change_pass_change_pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@color/colorBG_up"
                android:text="Change Password"
                android:fontFamily="@font/azonix"
                android:textColor="@color/colorWhite" />
        </LinearLayout>
        </ScrollView>
    </android.support.v7.widget.CardView>

</LinearLayout>