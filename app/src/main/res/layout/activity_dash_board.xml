<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gardient"
    android:orientation="vertical"
    tools:context=".ActivityDashBoard">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0.0dip"
        android:layout_weight=".1">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginVertical="5dp"
            android:src="@drawable/qrbealogo_text" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.0dip"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.0dip"
            android:layout_weight="1"
            android:orientation="horizontal">

            <android.support.v7.widget.CardView
                android:layout_width="0.0dip"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:clickable="true"
                android:contextClickable="true"
                app:cardBackgroundColor="@color/colorBG_down"
                app:cardCornerRadius="5dp"
                app:cardElevation="3dp">

                <ImageView
                    android:id="@+id/imageView_dashboard_create_event"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="25sp"
                    android:padding="15dp"
                    android:src="@drawable/ic_create_event" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/azonix"
                    android:text="Host An Event"
                    android:textColor="@color/colorWhite" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="0.0dip"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:clickable="true"
                android:contextClickable="true"
                app:cardBackgroundColor="@color/colorBG_down"
                app:cardCornerRadius="5dp"
                app:cardElevation="3dp">

                <ImageView
                    android:id="@+id/imageView_dashboard_hosted_events"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="25sp"
                    android:padding="15dp"
                    android:src="@drawable/ic_my_event" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/azonix"
                    android:text="Hosted Events"
                    android:textColor="@color/colorWhite" />
            </android.support.v7.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.0dip"
            android:layout_weight="1">

            <android.support.v7.widget.CardView
                android:layout_width="0.0dip"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:clickable="true"
                android:contextClickable="true"
                app:cardBackgroundColor="@color/colorBG_down"
                app:cardCornerRadius="5dp"
                app:cardElevation="3dp">

                <ImageView
                    android:id="@+id/imageView_dashboard_subscribe_to_events"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="25sp"
                    android:padding="15dp"
                    android:src="@drawable/ic_subscribe_event" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/azonix"
                    android:text="Subscribe Event"
                    android:textColor="@color/colorWhite" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="0.0dip"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/colorBG_down"
                app:cardCornerRadius="5dp"
                app:cardElevation="3dp">

                <ImageView
                    android:id="@+id/imageView_dashboard_user_profile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="25sp"
                    android:padding="15dp"
                    android:src="@drawable/ic_scan_attend" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/azonix"
                    android:text="Scan To Attend"
                    android:textColor="@color/colorWhite" />
            </android.support.v7.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.0dip"
            android:layout_weight="1">

            <android.support.v7.widget.CardView
                android:layout_width="0.0dip"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/colorBG_down"
                app:cardCornerRadius="5dp"
                app:cardElevation="3dp">

                <ImageView
                    android:id="@+id/imageView_dashboard_my_events"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="25sp"
                    android:src="@drawable/ic_my_event"
                    android:padding="15dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/azonix"
                    android:text="My Events"
                    android:textColor="@color/colorWhite" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="0.0dip"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/colorBG_down"
                app:cardCornerRadius="5dp"
                app:cardElevation="3dp">

                <ImageView
                    android:id="@+id/imageView_dashboard_settings"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="25sp"
                    android:padding="15dp"
                    android:src="@drawable/ic_settings" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/azonix"
                    android:text="Settings"
                    android:textColor="@color/colorWhite" />
            </android.support.v7.widget.CardView>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.0dip"
        android:layout_margin="5dp"
        android:layout_weight=".09">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            app:cardBackgroundColor="@color/colorBG_up"
            app:cardCornerRadius="5dp"
            app:cardElevation="3dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView_user_name1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/azonix"
                    android:gravity="center"
                    android:text="Logged in as werwer "
                    android:textColor="@color/colorAccent" />

                <android.support.v7.widget.CardView
                    android:id="@+id/cardView_dashboard_log_out"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elevation="1dp"
                    app:cardBackgroundColor="@color/colorBG_down"
                    app:cardCornerRadius="3dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:fontFamily="@font/azonix"
                        android:gravity="center"
                        android:text="Log out"
                        android:textColor="@color/colorWhite" />
                </android.support.v7.widget.CardView>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</LinearLayout>