<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:focusable="false"
    android:background="@drawable/bg_gardient"
    tools:context=".ActivitySubscribeEvent">
    <ImageView
        android:layout_width="100dp"
        android:layout_height="0.0dip"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"
        android:layout_weight=".1"
        android:src="@drawable/ic_subscribe_event" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/azonix"
        android:layout_gravity="center"
        android:textColor="@color/colorWhite"
        android:text="Subscribe tO An Event"/>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardCornerRadius="5dp"
        app:cardBackgroundColor="@color/colorBG_down"
        app:cardElevation="5dp">
        <ScrollView
            android:fillViewport="true"
            android:layout_width="match_parent"
            android:layout_height="fill_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:layout_marginTop="15dp"
                    android:textColorHint="@color/colorAccent">
                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/textInput_subscribe_event_code"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorWhite"
                        android:hint="Subscription Code" />
                </android.support.design.widget.TextInputLayout>
                <Button
                    android:id="@+id/btn_subscribe_event"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@color/colorBG_up"
                    android:text="Subscribe"
                    android:fontFamily="@font/azonix"
                    android:textColor="@color/colorWhite" />
            </LinearLayout>
        </ScrollView>
    </android.support.v7.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.0dip"
        android:layout_weight=".03"></LinearLayout>

</LinearLayout>