<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="20dp"
        android:padding="5dp"
        app:cardBackgroundColor="@color/colorBG_down"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_event_option_subscriber_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@color/colorBG_up"
                android:fontFamily="@font/azonix"
                android:paddingHorizontal="20dp"
                android:text="Subscribers List"
                android:textAllCaps="false"
                android:textColor="#ffffffff" />

            <Button
                android:id="@+id/btn_event_option_attendance_record"
                android:paddingHorizontal="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:background="@color/colorBG_up"
                android:fontFamily="@font/azonix"
                android:text="Attendance Record"
                android:textAllCaps="false"
                android:textColor="#ffffffff" />

            <Button
                android:id="@+id/btn_event_option_update_event"
                android:paddingHorizontal="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@color/colorBG_up"
                android:fontFamily="@font/azonix"
                android:text="Update Event"
                android:textAllCaps="false"
                android:textColor="#ffffffff" />

        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
