<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:background="@drawable/shape_rectangle_round_corner"
    app:cardBackgroundColor="@color/colorBG_up"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="5dp">

        <ImageView
            android:id="@+id/iiiiiaa"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:padding="8dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_user_profile" />

        <TextView
            android:id="@+id/textView_subs_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/iiiiiaa"
            android:fontFamily="@font/azonix"
            android:text="--------"
            android:textColor="@color/colorWhite"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView_subs_user_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView_subs_user_name"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/iiiiiaa"
            android:fontFamily="@font/font21"
            android:text="------"
            android:textColor="@color/colorWhite"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/textView_subs_user_accepted"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView_subs_user_email"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/iiiiiaa"
            android:fontFamily="@font/azonix"
            android:text="------"
            android:textColor="@color/colorWhite"
            android:textSize="10sp" />

    </RelativeLayout>
</android.support.v7.widget.CardView>
