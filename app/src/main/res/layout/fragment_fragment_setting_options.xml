<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".FragmentSettingOptions">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0.0dip"
            android:layout_margin="10dp"
            android:layout_weight="1"
            app:cardBackgroundColor="@color/colorBG_down"
            app:cardCornerRadius="5dp"
            app:cardElevation="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_setting_option_change_pass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="15dp"
                    android:background="@color/colorBG_up"
                    android:fontFamily="@font/azonix"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:text="Change Password"
                    android:textAllCaps="false"
                    android:textColor="#ffffffff" />

                <Button
                    android:id="@+id/btn_setting_option_about"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@color/colorBG_up"
                    android:fontFamily="@font/azonix"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:text="About"
                    android:textAllCaps="false"
                    android:textColor="#ffffffff" />
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</FrameLayout>